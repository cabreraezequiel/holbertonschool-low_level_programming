CC = gcc
SRC = main.c school.c
OBJ = ${SRC:%.c=%.o}
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all
all: ${OBJ} ${SRC}
	${CC} ${OBJ} m.h -o ${NAME}

.PHONY: clean
clean:
	${RM} *~ ${NAME}

.PHONY: oclean
oclean:
	${RM} ${OBJ}

.PHONY: fclean
fclean:	clean oclean

.PHONY: re
re: oclean all
